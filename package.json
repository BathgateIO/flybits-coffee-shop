{
  "name": "flybits-coffee-shop",
  "description": "A simple point-of-sale (POS) application for a coffee shop like Starbucks",
  "version": "1.0.0",
  "author": "Christopher Bathgate",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean && npm run test && npm run sass && npm run build:parts && npm run clean:css && npm run process:html",
    "build:parts": "npm run sass && npm run compile",
    "clean": "rimraf dist",
    "clean:css": "cleancss -o dist/css/main.min.css src/assets/stylesheets/main.css",
    "compile": "webpack --config config/webpack.config.prod.js",
    "dev": "cross-env NODE_ENV=development npm run sass && concurrently --kill-others \"webpack-dev-server --hot --inline\" \"node-sass --watch --output ./src/assets/stylesheets/ ./src/assets/stylesheets\"",
    "lint": "tslint src/**/*.ts",
    "process:html": "htmlprocessor src/index.html -o dist/index.html",
    "sass": "node-sass --output ./src/assets/stylesheets ./src/assets/stylesheets",
    "serve": "http-server dist/ -o"
  },
  "dependencies": {
    "axios": "~0.15.3",
    "bootstrap": "~3.3.7",
    "vue": "~2.2.4",
    "vue-class-component": "~5.0.0",
    "vue-property-decorator": "~4.0.0",
    "vue-router": "~2.3.0",
    "vuex": "^2.3.1",
    "vuex-typescript": "^0.1.0"
  },
  "devDependencies": {
    "@types/mocha": "~2.2.40",
    "@types/node": "~7.0.8",
    "@types/sinon": "~1.16.36",
    "awesome-typescript-loader": "~3.1.2",
    "clean-css-cli": "~4.0.9",
    "compression-webpack-plugin": "~0.3.2",
    "concurrently": "~3.4.0",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~3.2.4",
    "es6-promise": "~4.1.0",
    "file-loader": "~0.10.1",
    "globby": "~6.1.0",
    "htmlprocessor": "~0.2.4",
    "http-server": "~0.9.0",
    "istanbul-instrumenter-loader": "~2.0.0",
    "json-loader": "~0.5.4",
    "lodash.merge": "~4.6.0",
    "minimist": "~1.2.0",
    "mocha": "~3.2.0",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.0",
    "opn-cli": "~3.1.0",
    "phantomjs-prebuilt": "~2.1.14",
    "raw-loader": "~0.5.1",
    "remap-istanbul": "~0.9.1",
    "rimraf": "~2.6.1",
    "tslint": "~4.5.1",
    "tslint-loader": "~3.4.3",
    "typescript": "~2.2.1",
    "webpack": "~2.2.1",
    "webpack-dev-server": "~2.4.2"
  }
}
